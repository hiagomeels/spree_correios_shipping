<%= render :partial => 'spree/admin/shared/correios_tabs', :locals => { :current => 'Product Packages' } %>
<%= render 'spree/admin/shared/error_messages', :target => @product_package %>

<%= form_for [:admin, @product_package], :html => { :multipart => true } do |f| %>
  <div class="well">
    <fieldset data-hook="new_product_package">
      <legend align="center"><%= Spree.t(:new_package) %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
  </div>
<% end %>

<%= javascript_include_tag 'spree/backend/product_packages/new.js' %>
